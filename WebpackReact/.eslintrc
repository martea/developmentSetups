{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "es6": true,
        "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "arrowFunctions": true,
            "classes": true
        }
    },
    "plugins": [
        "react",
        "promise",
        "import"
    ],
    "rules": {
        "semi": 2,
        "quotes":  [2, "single", { "allowTemplateLiterals": true }]
    },
    "globals": {
     "require":true,
     "React" : true,
     "__dirname":true,
     "module" :true
    }
}